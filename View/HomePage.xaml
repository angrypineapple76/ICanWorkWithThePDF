<Page x:Class="ICanWorkWithThePDF.View.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ICanWorkWithThePDF.View"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="HomePage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Margin="20,50,20,50" Grid.Column="0" FontSize="21" Click="btnSplit_Click"  Name="btnSplit">Разделить</Button>
        <Button Margin="20,50,20,50" Grid.Column="1" FontSize="21" Click="btnMerge_Click"  Name="btnMerge">Объеденить</Button>
        <Button Margin="20,50,20,50" Grid.Column="2"></Button>
        <Frame Name="MergePageFrame" Grid.ColumnSpan="3" Grid.RowSpan="3"></Frame>
    </Grid>
</Page>
